@{
    ViewData["Title"] = "Prijava";
}

<!-- Spacers -->
<div class="" style="height: 10rem;"></div>

<!-- Main title -->
<div class="h2 d-flex justify-content-center pt-2 pb-2">
    Paketko
</div>

<!-- Sign in form -->
<form action="posiljke.html">
    <!-- Input fields -->
    <div class="d-flex justify-content-center">
        <input type="text" name="username" id="username" placeholder="Uporabniško ime">
    </div>
    <div class="d-flex justify-content-center mt-1">
        <input type="password" name="password" id="password" placeholder="Geslo">
    </div>
    <!-- Sign in Button -->
    <div class="d-flex justify-content-center mt-3">
        <a class="btn btn-outline-primary" asp-area="" asp-controller="Home" asp-action="Posiljke">Prijava</a>
        
    </div>
</form>